---
import Layout from '../../components/Layout.astro';
---
<Layout>
  <section class="max-w-4xl mx-auto px-4 py-16 text-center">
    <h1 class="text-3xl font-bold mb-6">Contato</h1>
    <p class="text-gray-700 mb-8">Vamos conversar sobre seu projeto.</p>
    <form action="https://formspree.io/f/SEU_ENDPOINT" method="POST" class="grid gap-4 max-w-md mx-auto">
      <label for="nome" class="flex flex-col text-left">
        Nome
        <input
          id="nome"
          type="text"
          name="nome"
          placeholder="Seu nome"
          required
          class="border rounded px-3 py-2"
        />
      </label>
      <label for="email" class="flex flex-col text-left">
        Email
        <input
          id="email"
          type="email"
          name="email"
          placeholder="Seu email"
          required
          class="border rounded px-3 py-2"
        />
      </label>
      <label for="mensagem" class="flex flex-col text-left">
        Mensagem
        <textarea
          id="mensagem"
          name="mensagem"
          placeholder="Sua mensagem"
          required
          class="border rounded px-3 py-2 h-32"
        ></textarea>
      </label>
      <button
        type="submit"
        class="bg-primary text-dark font-semibold py-2 rounded hover:scale-105 transition-transform"
      >
        Enviar
      </button>
    </form>
  </section>
</Layout>
